generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas  = ["user_management", "organization", "subscription", "module"]
}

// Include all model files
// Users and permissions are in the user_management schema
// Organizations are in the organization schema  
// Subscriptions and plans are in the subscription schema
// Modules are in the module schema
